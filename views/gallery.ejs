            <a class="nav-href" href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </div>

    <div id="content-wrapper">











      <div class="gallery">
        <% const setLength = 8; %>
        <% const numSets = Math.ceil(images.length / setLength); %>
        
        <% for (let setIndex = 0; setIndex < numSets; setIndex++) { %>
            <div class="row">
                <div class="row-child">
                    <!-- Small Images -->
                    <div class="small-container">
                        <% const smallImages = images.filter(image => image.size === "small" && !image.claimed); %>
                        <% for (let i = 0; i < 2; i++) { %>
                            <% const currentIndex = setIndex * 2 + i; %>
                            <div class="image-container small" style="<%= smallImages[currentIndex] ? '' : 'display: none;' %>">
                                <a href="#" class="booking-link" data-id="<%= smallImages[currentIndex]?.id %>"><img class="image" src="<%= smallImages[currentIndex]?.image %>" alt="Image"></a>
                            </div>
                        <% } %>
                    </div>
                    
                    <!-- Medium Images -->
                    <% const mediumImages = images.filter(image => image.size === "medium" && !image.claimed); %>
                    <div class="image-container medium" style="<%= mediumImages[setIndex] ? '' : 'display: none;' %>">
                        <a href="#" class="booking-link" data-id="<%= mediumImages[setIndex]?.id %>"><img class="image" src="<%= mediumImages[setIndex]?.image %>" alt="Image"></a>
                    </div>
                    
                    <!-- Large Images -->
                    <% const largeImages = images.filter(image => image.size === "large" && !image.claimed); %>
                    <div class="image-container large" style="<%= largeImages[setIndex] ? '' : 'display: none;' %>">
                        <a href="#" class="booking-link" data-id="<%= largeImages[setIndex]?.id %>"><img class="image" src="<%= largeImages[setIndex]?.image %>" alt="Image"></a>
                    </div>
                </div>
                
                <div class="row-child">
                    <!-- More Large Images -->
                    <% const moreLargeImages = images.filter(image => !image.claimed); %>
                    <div class="image-container large" style="<%= moreLargeImages[setIndex + numSets] ? '' : 'display: none;' %>">
                        <a href="#" class="booking-link" data-id="<%= moreLargeImages[setIndex + numSets]?.id %>"><img class="image" src="<%= moreLargeImages[setIndex + numSets]?.image %>" alt="Image"></a>
                    </div>
                    
                    <!-- Long Images -->
                    <div class="long-container">
                        <% const longImages = images.filter(image => image.size === "long"); %>
                        <% for (let i = 0; i < 2; i++) { %>
                            <% const currentIndex = setIndex * 2 + i; %>
                            <div class="image-container long" style="<%= longImages[currentIndex] ? '' : 'display: none;' %>">
                                <a href="#" class="booking-link" data-id="<%= longImages[currentIndex]?.id %>"><img class="image" src="<%= longImages[currentIndex]?.image %>" alt="Image"></a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    







    </div>

    <div id="up-container">
      <i class="up-arrow ri-arrow-up-line ri-2x"></i>
    </div>
  </div>


  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="/js/menu.js"></script>
  <script src="/js/gallery.js"></script>


</body>


</html>